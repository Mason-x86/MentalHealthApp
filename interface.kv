WindowManager:
    Home:
    Log:
    Diary:
    Help:
    Feeling:
    Setting:


<Home>:

    name: "Home"
    GridLayout:
        cols:2
        orientation: "vertical"

        Spinner:
            id: spinner_id
            text: "|||"
            values: ["Home", "Today", "Diary", "History", "Help", "Settings"]
            # on_text: root.spinner_clicked(spinner_id.text, self)
            font_size: 60
            text_size:self.size
            halign: "left"
            valign: "middle"
            color: 1, 0, 1, 1
            size_hint_y: None
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            text: 'Open'
            font_size: 60
            size_hint_y: None
            # height: 44
            on_press: root.on_button_click(spinner_id.text)
    GridLayout:
        cols: 1
        pos_hint_y: 1
        Label:
            text: ""
            font_size: 60
            size_hint_y: None
        Label:
            text: "Safe Mind"
            font_size: 60
            text_size:self.size
            halign: "left"
            valign: "middle"
            color: 1, 0, 1, 1
            size_hint_y: None
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            # size_hint: None, None


